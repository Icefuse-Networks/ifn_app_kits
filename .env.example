# =============================================================================
# Icefuse Kit Manager - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control

# =============================================================================
# APPLICATION
# =============================================================================

# Node environment (development | production)
NODE_ENV=development

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================

# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Development (local Docker): postgresql://kits_user:PASSWORD@localhost:5432/ifn_kits
# Production (Dokploy internal): postgresql://kits_user:PASSWORD@kits-postgres-2wdqyt:5432/ifn_kits
# Production (external access): postgresql://kits_user:PASSWORD@104.129.132.73:5433/ifn_kits
DATABASE_URL=postgresql://kits_user:password@localhost:5432/ifn_kits

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================

# NextAuth secret - generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# NextAuth URL - your app's base URL
NEXTAUTH_URL=http://localhost:3020

# Auth server URL - only needed if overriding default
# Default: http://localhost:3012 (dev) or https://auth.icefuse.com (prod)
# AUTH_SERVER_URL=http://localhost:3012

# Auth server bootstrap token (for initial auth handshake)
AUTH_BOOTSTRAP_TOKEN=

# User sync secret (for webhook verification)
AUTH_USER_SYNC_SECRET=

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================

# Redis connection URL
# Format: redis://:PASSWORD@HOST:PORT
REDIS_URL=redis://localhost:6379

# =============================================================================
# STEAM AUTHENTICATION (Optional)
# =============================================================================

# Steam Web API Key - get from https://steamcommunity.com/dev/apikey
STEAM_API_KEY=

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Google Tag Manager ID
GTM_ID=

# =============================================================================
# FILE STORAGE (Optional)
# =============================================================================

# Path for JSON data files (kit configs, etc.)
# In Docker: mount a volume to this path for persistence
DATA_PATH=./data
